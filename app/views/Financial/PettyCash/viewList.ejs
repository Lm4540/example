<!DOCTYPE html>
<html lang="en">

<head>
   <%- include('../../Layouts/Head.ejs') %>
   <link rel="stylesheet" href="assets/libs/choices/choices.min.css">
   <style>
      .icon-card i {
         font-size: 4rem;
         padding-top: 20%;
      }

      .icon-card p {
         padding-top: 60%;
         font-weight: 550;
         font-size: 1rem;
         margin-bottom: 15px;
         ;
      }
   </style>
</head>

<body class="<%= darkMode %>">
   <%- include('../../Layouts/SideBar.ejs') %>
   <div id="main">
      <%- include('../../Layouts/NavBar.ejs') %>
      <div class="main-content container-fluid">
         <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10 col-12">
               <h2 class="text-center">Selecciona una Sucursal</h2>
   
               <div class="row justify-content-center">
                  <% sucursals.forEach(sucursal => { %>
   
                  <a class="card icon-card text-center" href="/financial/pettycash/<%= sucursal.id %>">
                     <i class="fas fa-box-usd"></i>
                     <p><%= sucursal.name %></p>
                  </a>
                  <% }) %>
   
               </div>
            </div>
         </div>

      </div>

      <%- include('../../Layouts/Footer.ejs') %>
   </div>
</body>
<%- include('../../Layouts/Scripts.ejs') %>


</html>