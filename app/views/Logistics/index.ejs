   <div id="main">
      <%- include('../Layouts/NavBar.ejs') %>
      <div class="main-content container-fluid">
         <div class="row widgets">
            <div class="col-12 col-sm-12 col-md-4" onclick="show_reservas()" style="cursor: pointer;">
               <div class="card br-2rem">
