              <th>Nombre del Proveedor</th>
              <th>Fecha de Registro</th>
            </tr>
          </thead>
          <tbody>
            <% clients.forEach(cliente => { %>
            <tr>
              <td><%= cliente.id %></td>
              <td><%= cliente.name %></td>
              <td><%= Helper.format_date(cliente.createdAt, false) %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </section>
    </div>

    <%- include('../../Layouts/Footer.ejs') %>
  </div>
