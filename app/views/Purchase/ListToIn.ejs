<!DOCTYPE html>
<html lang="es">

<head>
   <%- include('../Layouts/Head.ejs') %>

</head>

<body class="<%= darkMode %>">
   <%- include('../Layouts/SideBar.ejs') %>
   <div id="main">
      <%- include('../Layouts/NavBar.ejs') %>
      <div class="main-content container-fluid">
         <div class="card">
            <div class="card-header">
               <h4 class="text-center">Compras pendientes de Ingreso</h4>
            </div>

            <div class="card-body">
               <table class="table table-striped table-hover table-bordered table-sm">
                  <thead class="text-center">
                     <tr>
                        <td>Proveedor</td>
                        <td>Fecha</td>
                        <td>Documento</td>
                        <td>Monto Total</td>
                        <td></td>
                     </tr>
                  </thead>
                  <tbody id="details_body">
                     <% purchases.forEach(el => { %>
                     <tr>
                        <td><%= providers[el.provider] %></td>
                        <td><%= Helper.format_date(el.createdAt) %></td>
                        <td><%= invoice_types[el.invoice_type] %> NÂ° <%= el.invoice_number %></td>
                        <td>$<%= Helper.money_format(el.amount) %></td>
                        <td><a href="/purchase/in/<%= el.id %>" class="badge bg-danger round">Ingresar</a></td>
                     </tr>
                     <% }) %>

                  </tbody>
               </table>
            </div>

         </div>


      </div>

      <%- include('../Layouts/Footer.ejs') %>
   </div>
</body>

<%- include('../Layouts/Scripts.ejs') %>
<script>

</script>

</html>