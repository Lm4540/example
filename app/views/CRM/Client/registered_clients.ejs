<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Reporte de Clientes Registrados</title>
  <base href="http://localhost:8080/" />
  <link rel="manifest" href="manifest.json">
  <link rel="stylesheet" href="assets/css/bootstrap.css">
  <link rel="stylesheet" href="assets/css/icon-font.css">
  <link rel="shortcut" href="assets/images/favicon.svg" type="image/x-icon">
  <link rel="icon" href="assets/images/favicon.ico" type="image/x-icon">
</head>

<body>

  <div class="container">
    <div class="row">
      <h3 class="col center-text text-center">
        Clientes Registrados por Orden Alfab√©tico
      </h3>
    </div>
    <table class="table table-sm table-bordered">
      <thead>
        <tr>
          <th>ID de Cliente</th>
          <th>Nombre del Cliente</th>
          <th>Fecha de Registro</th>
          <th>Numero</th>

        </tr>
      </thead>
      <tbody>
        <% clients.forEach(cliente => { %>
        <tr>
          <td><%= cliente.id %></td>
          <td><%= cliente.name %></td>
          <td><%= Helper.format_date(cliente.createdAt, false) %></td>
          <td><%= cliente.phone %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>


</body>

</html>