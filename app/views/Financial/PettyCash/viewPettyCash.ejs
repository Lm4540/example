<!DOCTYPE html>
<html lang="es">

<head>
   <%- include('../../Layouts/Head.ejs') %>
   <link rel="stylesheet" href="assets/libs/choices/choices.min.css">
   <style>
      .form-group label {
         font-size: 0.85rem;
         font-weight: 500;
      }
   </style>
</head>

<body class="<%= darkMode %>">
   <%- include('../../Layouts/SideBar.ejs') %>
   <div id="main">
      <%- include('../../Layouts/NavBar.ejs') %>
      <div class="main-content container-fluid">
         <h2 class="text-center">Caja Chica <%= sucursal.name %> (<span id="total_amount">$<%= Helper.money_format(sucursal.balance) %></span>)</h2>
         <div class="row justify-content-center mt-5">
            <div class="col-lg-8 col-md-10 col-12 text-center">
               <div class="row justify-content-center mt-5 table-responsive">
                  <table class="table table-sm table-bordered table-hover">
                     <thead>
                        <tr>
                           <th>Fecha</th>
                           <th>Concepto</th>
                           <th>Ingreso</th>
                           <th>Salidas</th>
                           <th>Saldo</th>
                        </tr>
                     </thead>
                     <tbody id="moves">
                        <% moves.forEach(move => { %>
                        <% if (move.isin == true) { %>
                        <tr class="">
                           <td><%= Helper.format_date(move.createdAt) %></td>
                           <td class="text-left">
                              <%= move.concept %> <br>
                              Asignado a <%= move.asigned_to %><br>
                              R: <%= move.createdBy %> 
                           </td>
                           <td>$<%= Helper.money_format(move.amount) %></td>
                           <td></td>
                           <td><b>$<%= Helper.money_format(move.amount + move.last_amount) %></b></td>
                        </tr>
                        <% } else { %>
                        <tr class="table-secondary">
                           <td><%= Helper.format_date(move.createdAt) %></td>
                           <td class="text-left">
                              <%= move.concept %> <br>
                              Asignado a <%= move.asigned_to %><br>
                              R: <%= move.createdBy %>
                           </td>
                           <td></td>
                           <td class="text-danger">$<%= Helper.money_format(move.amount) %></td>
                           <td><b>$<%= Helper.money_format(move.last_amount - move.amount) %></b></td>
                        </tr>
                        <% } %>
                        <% }) %>
                     </tbody>
                  </table>

               </div>
            </div>
         </div>

      </div>

      

      <%- include('../../Layouts/Footer.ejs') %>
   </div>
</body>
<%- include('../../Layouts/Scripts.ejs') %>


</html>